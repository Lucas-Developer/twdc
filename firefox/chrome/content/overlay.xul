<?xml-stylesheet href="overlay.css"?>
<overlay
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  xmlns:html="http://www.w3.org/1999/xhtml"
  id="twitter-disconnect"
>
  <script src="overlay.js"/>
  <box id="urlbar-icons">
    <image
      id="twitter-disconnect-icon"
      tooltiptext="View and manage Twitter requests"
      popup="twitter-disconnect-popup"
    />
    <menupopup id="twitter-disconnect-popup" position="after_end">
      <menuitem id="twitter-disconnect-blocking"/>
      <menuseparator/>
      <menuitem
        id="twitter-disconnect-help"
        label="Ask Disconnect a question"
        accesskey="A"
        value="https://disconnect.me/help"
      />
      <menuitem
        id="twitter-disconnect-feedback"
        label="Give Disconnect props"
        accesskey="G"
        value="https://addons.mozilla.org/en-US/firefox/addon/twdc/"
      />
    </menupopup>
  </box>
</overlay>
